# Cache static assets for 1 year
/src/*
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 6 months
/*.webp
  Cache-Control: public, max-age=15552000
/*.png
  Cache-Control: public, max-age=15552000
/*.jpg
  Cache-Control: public, max-age=15552000
/*.svg
  Cache-Control: public, max-age=15552000

# HTML files - cache for 1 hour
/*.html
  Cache-Control: public, max-age=3600

# Enable compression for all text-based assets
/*
  Content-Encoding: gzip
  Vary: Accept-Encoding

# Security headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()

# Enable HTTP/2 Server Push for critical resources
/
  Link: </src/assets/fonts/mona.woff2>; rel=preload; as=font; type=font/woff2; crossorigin
  Link: </src/assets/fonts/geist-mono.woff2>; rel=preload; as=font; type=font/woff2; crossorigin
